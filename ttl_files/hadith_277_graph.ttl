<http://etratnet.ir/graph/ontology/277> rdf:type go:ontology ;
        go:hascontent "5.  به مرد [امام هادى] عليه‌السلام نوشتم: دوستداران شما كه اين جا هستند در شناخت خدا اختلاف نظر دارند: برخى مى‌گويند: [او] جسم است، و برخى مى‌گويند: داراى شكل و صورت است. حضرت به خطّ خود مرقوم فرمود: «پاكا خدايى كه محدوديت نپذيرد و در وصف نگنجد. هيچ چيزى همانند او نيست و او شنوا و دانا ـ يا گفت: ـ بيناست»."@fa,
        "5.  كَتَبْتُ إِلَى الرَّجُلِ عليه‌السلام: أَنَّ مَنْ قِبَلَنَا مِنْ مَوَالِيكَ قَدِ اخْتَلَفُوا فِي التَّوْحِيدِ: فَمِنْهُمْ مَنْ يَقُولُ: جِسْمٌ، وَمِنْهُمْ مَنْ يَقُولُ: صُورَةٌ. فَكَتَبَ عليه‌السلام بِخَطِّهِ: «سُبْحَانَ مَنْ لاَ يُحَدُّ، وَلاَ يُوصَفُ، لَيْسَ كَمِثْلِهِ شَيْءٌ وَهُوَ السَّمِيعُ الْعَلِيمُ ـ أَوْ قَالَ ـ: الْبَصِيرُ»."@ar.
    


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/277-1> rdf:type owl:ontology .

ex:speaker a go:person ;
    rdfs:label "المخاطب" .

ex:man_pbuh a go:person ;
    rdfs:label "الرجل عليه السلام" .

ex:loyal_followers a go:group ;
    go:associatedwith ex:man_pbuh .

ex:writing_event a go:event ;
    go:hasagent ex:speaker ;
    go:hasrecipient ex:man_pbuh ;
    go:hastheme ex:differing_event .

ex:differing_event a go:event ;
    go:hasagent ex:loyal_followers ;
    go:hastheme ex:monotheism .

ex:monotheism a go:concept ;
    rdfs:label "التوحيد" .
go:event rdfs:label "رخداد"@fa.


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/277-2> rdf:type owl:ontology .

ex:saying1 a go:event ;
    go:hasagent ex:somemawaliofman ;
    go:hastheme ex:claim1 .

ex:somemawaliofman a go:agent .

ex:claim1 a go:claim ;
    go:subject ex:god ;
    go:predicate go:isa ;
    go:object ex:body .

ex:god a go:substance .
ex:body a go:substance .
go:event rdfs:label "رخداد"@fa.
go:substance rdfs:label "شی"@fa.
go:agent rdfs:label "عامل"@fa.


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/277-3> rdf:type owl:ontology .

ex:followersofman a go:group ;
    go:hasmember ex:follower1, ex:follower2 .

ex:man a go:person .

ex:god a go:substance .

ex:image a go:object .

ex:statementevent1 a go:event ;
    go:hasagent ex:followersofman ;
    go:hastheme ex:proposition1 .

ex:proposition1 a go:informationcontent ;
    go:hassubject ex:god ;
    go:haspredicate ex:isa ;
    go:hasobject ex:image .
go:event rdfs:label "رخداد"@fa.
go:information rdfs:label "اطلاعات"@fa.
go:substance rdfs:label "شی"@fa.


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/277-4> rdf:type owl:ontology .

ex:man_peace_upon_him a go:person ;
    go:hastitle "عليه السلام" .

ex:text1 a go:text ;
    go:hascontent "سبحان الذي لا يُحدُّ، ولا يُوصَف، ليس كمثله شيء وهو السميع العليم" .

ex:writing_event1 a go:event ;
    go:hasagent ex:man_peace_upon_him ;
    go:hastheme ex:text1 ;
    go:hasmanner "بخطّه" .
go:event rdfs:label "رخداد"@fa.


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/277-5> rdf:type owl:ontology .

ex:man_alayhassalam a go:human ;
    rdfs:label "the man, peace be upon him" .

ex:speechevent1 a go:event , ex:speech ;
    go:hasagent ex:man_alayhassalam ;
    go:hastheme "glory be to him who is the all-seeing"^^xsd:string .
go:event rdfs:label "رخداد"@fa.