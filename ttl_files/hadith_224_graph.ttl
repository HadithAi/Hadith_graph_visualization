@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/224-1> rdf:type owl:ontology .

ex:eventinstance1 a go:creationevent ;
    go:hasagent ex:god ;
    go:hastheme ex:creatures .

ex:god a go:substance ;
    rdfs:label "god"@en .

ex:creatures a go:substance ;
    rdfs:label "creatures"@en .
go:substance rdfs:label "شی"@fa.


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/224-2> rdf:type owl:ontology .

ex:creationevent1 a go:creationevent ;
    go:hasagent ex:god ;
    go:hastheme ex:void ;
    go:hassource ex:sourceentity .

ex:god a go:agent ;
    rdfs:label "god" .

ex:void a go:substance ;
    rdfs:label "void" .

ex:sourceentity a go:substance ;
    rdfs:label "source" .
go:substance rdfs:label "شی"@fa.
go:agent rdfs:label "عامل"@fa.


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/224-3> rdf:type owl:ontology .

# defining the entity class 'thing' as things named "thing"
ex:thing a go:substance ;
    rdfs:label "شيء" .

# defining the entity allah
ex:allah a go:substance .

# creature class
go:creature a go:class .

# event: classification of thing as creature
ex:classificationevent a go:event ;
    go:hastheme ex:thing ;
    go:hasresult go:creature .

# exception statement (informal representation using owl negative property assertion)
# saying allah is not a creature even if named "thing"
ex:allah rdfs:label "شيء" .

# state that ex:allah is not classified as creature despite having the name "شيء"
[] a go:negativepropertyassertion ;
   go:sourceindividual ex:allah ;
   go:assertionproperty go:type ;
   go:targetindividual go:creature .

# general statement that everything named "شيء" is a creature except allah.
# (this is represented by the classification event and exception above.)
go:event rdfs:label "رخداد"@fa.
go:substance rdfs:label "شی"@fa.