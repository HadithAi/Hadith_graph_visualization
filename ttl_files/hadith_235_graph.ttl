<http://etratnet.ir/graph/ontology/235> rdf:type go:ontology ;
        go:hascontent "1.  «كسى كه خدا را با توهم پرستد كافر است؛ كسى كه نام را پرستد بى معنا [و ذات و مسمّا]كافر است؛ كسى كه نام و معنا [هر دو] را پرستد مشرك است؛ كسى كه معنا را پرستد با اطلاق نام‌ها بر او و با صفاتى كه او خودش را با آنها وصف كرده است، و در دل بدان باور داشته باشد و در نهان و آشكار زبانش بدان گويا گردد، اينان ياران [و پيروان]راستين امير المؤمنين عليه‌السلام هستند». در حديثى ديگر آمده است: «اينان مؤمنان راستين هستند»."@fa,
        "1.  عَنْ أَبِي عَبْدِ اللّه‌ِ عليه‌السلام، قَالَ: «مَنْ عَبَدَ اللّه‌َ بِالتَّوَهُّمِ، فَقَدْ كَفَرَ؛ وَمَنْ عَبَدَ الاِسْمَ دُونَ الْمَعْنى، فَقَدْ كَفَرَ؛ وَمَنْ عَبَدَ الاِسْمَ وَالْمَعْنى، فَقَدْ أَشْرَكَ؛ وَمَنْ عَبَدَ الْمَعْنى بِإِيقَاعِ الْأَسْمَاءِ عَلَيْهِ بِصِفَاتِهِ الَّتِي وَصَفَ بِهَا نَفْسَهُ، فَعَقَدَ عَلَيْهِ قَلْبَهُ، وَنَطَقَ بِهِ لِسَانُهُ فِي سَرَائِرِهِ وَعَلاَنِيَتِهِ، فَأُولئِكَ أَصْحَابُ أَمِيرِ الْمُؤمِنِينَ عليه‌السلام حَقّاً». وَفِي حَدِيثٍ آخَرَ: «أُولئِكَ هُمُ الْمُؤمِنُونَ حَقّاً»."@ar.
    


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/235-1> rdf:type owl:ontology .

ex:abdullah rdf:type go:person .
ex:delusion rdf:type go:state .
ex:disbeliefevent rdf:type go:eventinstance ;
    go:instanceof ex:kufr ;
    go:hasagent ex:abdullah ;
    go:hascause ex:delusion .

ex:kufr rdf:type go:eventclass .
go:event rdfs:label "رخداد"@fa.


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/235-2> rdf:type owl:ontology .

ex:person1 a go:agent .
ex:abdname a go:substance ;
    go:haslabel "'abd" .

ex:denialevent1 a go:event ;
    go:hasagent ex:person1 ;
    go:hastheme ex:meaningofabd .

ex:disbeliefevent1 a go:event ;
    go:hasagent ex:person1 ;
    go:causedby ex:denialevent1 .

ex:meaningofabd a go:concept .

# statement: if a person denies the meaning of 'abd but keeps its name, then that person is involved in disbeliefevent.
go:event rdfs:label "رخداد"@fa.
go:substance rdfs:label "شی"@fa.
go:agent rdfs:label "عامل"@fa.


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/235-3> rdf:type owl:ontology .

ex:abd a go:concept ;
    rdfs:label "abd" ;
    go:hasmeaning "servant or slave" ;
    go:associatedwith ex:shirk .

ex:shirk a go:event ;
    rdfs:label "polytheism (shirk)" .
go:event rdfs:label "رخداد"@fa.


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/235-4> rdf:type owl:ontology .

# entities
ex:abd_al_ma'na a go:person ;
    rdfs:label "abd al-ma'na" .

ex:others a go:agent .

ex:heart_abd_al_ma'na a go:organ ;
    go:ispartof ex:abd_al_ma'na .

ex:names a go:substance ;
    go:hasattributes "attributes described by abd al-ma'na about himself" .

# event: imposing names
ex:imposingnamesevent a go:event ;
    go:hasagent ex:others ;
    go:hastheme ex:names ;
    go:hasrecipient ex:abd_al_ma'na .

# state: heart bound
ex:heartboundstate a go:event ;
    go:hastheme ex:heart_abd_al_ma'na ;
    go:cause ex:imposingnamesevent .
go:event rdfs:label "رخداد"@fa.
go:substance rdfs:label "شی"@fa.
go:agent rdfs:label "عامل"@fa.


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/235-5> rdf:type owl:ontology .

ex:abdulmaana a go:person .
ex:names a go:substance .
ex:attributes a go:attribute .

# event 1: attribution of names to abdulmaana by an implicit agent
ex:attributionevent1 a ex:attributionevent ;
    go:hasagent ex:generalagent ;
    go:hastheme ex:names ;
    ex:hasrecipient ex:abdulmaana ;
    ex:hascause ex:attributes .

# event 2: pronouncement of these names by abdulmaana's tongue in secrets and openness
ex:pronouncementevent1 a ex:pronouncementevent ;
    go:hasagent ex:abdulmaanatongue ;
    go:hastheme ex:names ;
    ex:insecret "true"^^<http://www.w3.org/2001/xmlschema#boolean> ;
    ex:inopen "true"^^<http://www.w3.org/2001/xmlschema#boolean> .

# linking the tongue to abdulmaana
ex:abdulmaanatongue a go:bodypart ;
    ex:partof ex:abdulmaana .
go:substance rdfs:label "شی"@fa.


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/235-6> rdf:type owl:ontology .

ex:commanderoffaithful a go:person ;
    rdfs:label "commander of the faithful" .

ex:companionsofcommanderoffaithful a go:group ;
    rdfs:label "companions of the commander of the faithful" ;
    go:hasrelationto ex:commanderoffaithful .

ex:meaning a go:substance ;
    rdfs:label "meaning" .

ex:names a go:concept ;
    rdfs:label "names" .

ex:attributes a go:concept ;
    rdfs:label "attributes" .

ex:worshipevent a go:event ;
    rdfs:label "worshiping the meaning" ;
    go:hasagent ex:companionsofcommanderoffaithful ;
    go:hastheme ex:meaning ;
    go:hasinstrument ex:attributingnamesperattributes .

ex:attributingnamesperattributes a go:event ;
    rdfs:label "attributing names according to attributes" ;
    go:hastheme ex:meaning ;
    go:hasinstrument ex:names, ex:attributes .
go:event rdfs:label "رخداد"@fa.
go:substance rdfs:label "شی"@fa.


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/235-7> rdf:type owl:ontology .

ex:commanderoffaithful a go:person ;
    rdfs:label "commander of the faithful" .

ex:truth a go:concept ;
    rdfs:label "truth" .

ex:companionsofcommanderoffaithful a go:group ;
    rdfs:label "companions of the commander of the faithful" ;
    go:relatedto ex:commanderoffaithful .

ex:companionsoftruth a go:group ;
    rdfs:label "companions of truth" ;
    go:relatedto ex:truth .

ex:companionsofcommanderoffaithful owl:equivalentclass ex:companionsoftruth .


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/235-8> rdf:type owl:ontology .

ex:truebelievers a go:person ;
    ex:istrue true .

ex:these a go:group ;
    ex:identifiesto ex:truebelievers .