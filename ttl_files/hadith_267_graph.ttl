@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/267-2> rdf:type owl:ontology .

ex:chair a go:substance ;
    go:ispartof ex:seventypartsoflightofthrone .

ex:seventypartsoflightofthrone a go:aggregate ;
    go:quantity "70"^^<http://www.w3.org/2001/xmlschema#int> ;
    go:haspart ex:lightofthrone .

ex:lightofthrone a go:substance ;
    go:associatedwith ex:throne .

ex:throne a go:substance .
go:substance rdfs:label "شی"@fa.


@base <http://etratnet.ir/ontology/> .

