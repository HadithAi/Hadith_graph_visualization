<http://etratnet.ir/graph/ontology/298> rdf:type go:ontology ;
        go:hascontent "6.  به امام باقر عليه‌السلام عرض كردم: فدايت گردم، اگر صلاح مى‌دانيد به من بياموزيد كه آيا خداوند ـ جلّ وجهه ـ پيش از آن كه آفرينش را بيافريند مى‌دانست كه يگانه است؟ زيرا ياران شما اختلاف نظر دارند. برخى‌شان مى‌گويند: پيش از آن كه چيزى از آفريدگانش را بيافريند، مى‌دانسته است، و برخى ديگر مى‌گويند: «مى‌داند» در حقيقت، به معناى «ايجاد مى‌كند» است؛ بنابراين، او امروز مى‌داند كه پيش از ايجاد اشيا جز او موجودى نبوده است. اينان مى‌گويند: اگر ثابت كنيم كه او از ازل مى‌دانسته يگانه است ثابت كرده‌ايم كه از ازل موجودى جز او با او بوده است. سرورم، اگر صلاح مى‌دانيد آموزه‌اى به من دهيد كه از آن فراتر نروم. حضرت نوشت: «خداوند بزرگ و بلندنام، از ازل عالم بوده است»."@fa,
        "6.  قُلْتُ لِأَبِي جَعْفَرٍ عليه‌السلام: جُعِلْتُ فِدَاكَ، إِنْ رَأَيْتَ أَنْ تُعَلِّمَنِي هَلْ كَانَ اللّه‌ُ ـ جَلَّ وَجْهُهُ ـ يَعْلَمُ قَبْلَ أَنْ يَخْلُقَ الْخَلْقَ أَنَّهُ وَحْدَهُ؟ فَقَدِ اخْتَلَفَ مَوَالِيكَ، فَقَالَ بَعْضُهُمْ: قَدْ كَانَ يَعْلَمُ قَبْلَ أَنْ يَخْلُقَ شَيْئاً مِنْ خَلْقِهِ، وَقَالَ بَعْضُهُمْ: إِنَّمَا مَعْنى «يَعْلَمُ» «يَفْعَلُ»، فَهُوَ الْيَوْمَ يَعْلَمُ أَنَّهُ لاَ غَيْرُهُ قَبْلَ فِعْلِ الْأَشْيَاءِ، فَقَالُوا: إِنْ أَثْبَتْنَا أَنَّهُ لَمْ يَزَلْ عَالِماً بِأَنَّهُ لاَ غَيْرُهُ، فَقَدْ أَثْبَتْنَا مَعَهُ غَيْرَهُ فِي أَزَلِيَّتِهِ، فَإِنْ رَأَيْتَ يَا سَيِّدِي، أَنْ تُعَلِّمَنِي مَا لاَ أَعْدُوهُ إِلى غَيْرِهِ. فَكَتَبَ عليه‌السلام: «مَا زَالَ اللّه‌ُ عَالِماً تَبَارَكَ وَتَعَالى ذِكْرُهُ»."@ar.
    


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/298-1> rdf:type owl:ontology .

ex:god a go:deity ;
    go:hasname "god" .

ex:knowledgeofoneness a go:event ;
    go:hasagent ex:god ;
    go:hastheme ex:god ;
    go:eventtime "beforecreation" .

ex:creationevent a go:event ;
    go:eventtype "creation" .

ex:eventtime "beforecreation" ;
    go:temporalrelationbefore ex:creationevent .
go:event rdfs:label "رخداد"@fa.


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/298-2> rdf:type owl:ontology .

# entities
ex:somescholars rdf:type go:group ;
    go:hasmember ex:scholar1, ex:scholar2 .
ex:god rdf:type go:deity .
ex:creatures rdf:type go:collection ;
    go:includes go:creature .

# events
ex:speakingevent rdf:type go:communicationevent ;
    go:hasagent ex:somescholars ;
    go:hastheme ex:proposition .

ex:knowledgeevent rdf:type go:knowledgeevent ;
    go:hasagent ex:god ;
    go:temporalcontext ex:beforecreation .

ex:creationevent rdf:type go:creationevent ;
    go:hasagent ex:god ;
    go:hastheme ex:creatures .

# proposition content
ex:proposition rdf:type go:proposition ;
    go:asserts ex:knowledgeevent .

# temporal relation
ex:beforecreation rdf:type go:temporalcontext ;
    go:before ex:creationevent .


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/298-3> rdf:type owl:ontology .

ex:event1 a go:speechevent ;
    go:hasagent ex:somescholars ;
    go:hastheme ex:meaningstatement .

ex:somescholars a go:group ;
    go:hasrole go:scholar .

ex:meaningstatement a go:proposition ;
    go:assertsequivalence ex:knowverbmeaning , ex:doverbmeaning .

ex:knowverbmeaning a go:linguisticmeaning ;
    go:label "to know" .

ex:doverbmeaning a go:linguisticmeaning ;
    go:label "to do" .


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/298-4> rdf:type owl:ontology .

ex:eventinstance1 a go:event ;
  go:hasagent ex:god ;
  go:hastheme _:b1 ;
  time:hasdate ex:today .

ex:god a go:deity .

ex:today a time:temporalentity .

_:b1 a go:proposition ;
  go:hastheme ex:nooneelsebeforegodinactions .

ex:nooneelsebeforegodinactions a go:negatedstatement ;
  go:subject ex:nooneelse ;
  go:predicate ex:beforeindoingthings ;
  go:object ex:god .

ex:nooneelse a go:agent .

ex:beforeindoingthings a go:relation .
go:event rdfs:label "رخداد"@fa.


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/298-5> rdf:type owl:ontology .

# entities
ex:god a go:substance ;
    go:hasrole ex:knower .

ex:anotherknower a go:substance ;
    go:hasrole ex:knower .

# states
ex:godonlyknowerstate a go:state ;
    go:haspatient ex:god ;
    go:hasattribute ex:exclusiveknowledge .

ex:coexistknowersstate a go:state ;
    go:haspatient ex:god , ex:anotherknower ;
    go:hasattribute ex:sharedknowledgeeternity .

ex:exclusiveknowledge a go:attribute ;
    rdfs:label "exclusive knowledge" .

ex:sharedknowledgeeternity a go:attribute ;
    rdfs:label "existence of another knower in eternity with god" .

# events
ex:provingevent a go:event ;
    go:hasagent ex:we ;
    go:hastheme ex:godonlyknowerstate ;
    go:hasconsequence ex:coexistknowersstate .

ex:we a go:agent .
go:event rdfs:label "رخداد"@fa.
go:substance rdfs:label "شی"@fa.
go:agent rdfs:label "عامل"@fa.


@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/298-6> rdf:type owl:ontology .

ex:god a go:god ;
       go:hasknowledge ex:knowledge ;
       go:hascontinuousstate ex:stillknowingstate .

ex:knowledge a go:property .
ex:stillknowingstate a go:state ;
                   go:relatesto ex:god ;
                   go:description "continuous state of knowing attributed to god" .