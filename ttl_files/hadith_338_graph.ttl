@base <http://etratnet.ir/ontology/> .

<http://etratnet.ir/ontology/338-6> rdf:type owl:ontology .

ex:sayingevent a go:event ;
    go:hasagent ex:you ;
    go:hasrecipient ex:speaker ;
    go:hastheme ex:godasdeitystatement .

ex:you a go:person .
ex:speaker a go:person .

ex:god a go:deity ;
    go:existsin ex:sky, ex:earth, ex:seas, ex:deserts, ex:everyplace .

ex:sky a go:location .
ex:earth a go:location .
ex:seas a go:location .
ex:deserts a go:location .
ex:everyplace a go:location .

ex:godasdeitystatement a go:statement ;
    go:about ex:god ;
    go:hasproperty ex:deityinsky, ex:deityonearth, ex:deityinseas, ex:deityindeserts, ex:deityeverywhere .

ex:deityinsky a go:property ;
    go:propertyvalue "god is lord in the sky" .

ex:deityonearth a go:property ;
    go:propertyvalue "god is lord on the earth" .

ex:deityinseas a go:property ;
    go:propertyvalue "god is lord in the seas" .

ex:deityindeserts a go:property ;
    go:propertyvalue "god is lord in the deserts" .

ex:deityeverywhere a go:property ;
    go:propertyvalue "god is lord in every place" .
go:event rdfs:label "رخداد"@fa.


